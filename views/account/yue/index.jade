extends ../../../layouts/wechat

block head
    title 通知列表

block body
    div.weui-tab
        div.weui-panel 
            div.weui-panel__hd 当前通知列表
                each yue,i in data
                    a.weui-media-box.weui-media-box_appmsg(href="/account/yue/detail/#{yue._id}")
                        div.weui-media-box__bd
                            h4.weui-media-box__title #{yue.title}
                                if yue.isImportant
                                    span.weui-badge(style="margin-left: 5px;") 重要
                            p.weui-media-box__desc #{yue.general}
                            ul.weui-media-box__info
                                li.weui-media-box__info__meta #{yue.type}
                                li.weui-media-box__info__meta #{yue.creator}
                                li.weui-media-box__info__meta 截止：#{yue.timeFinished}
            weui-panel__hd 此处仅显示为阅签的文件，历史记录请在主页中寻找
    div.weui-tabbar
        a.weui-tabbar__item(href="/account/")
            img.weui-tabbar__icon(src="/dist/weui/dist/example/images/icon_nav_panel.png" alt="" )
            p.weui-tabbar__label 主页
        a.weui-tabbar__item(href="/account/yue/")
            img.weui-tabbar__icon(src="/dist/weui/dist/example/images/icon_nav_button.png" alt="" )
            p.weui-tabbar__label 当前通告
        a.weui-tabbar__item.weui-bar__item_on(href="/account/yue/")
            img.weui-tabbar__icon(src="/dist/weui/dist/example/images/icon_nav_toast.png" alt="" )
            p.weui-tabbar__label 待阅阅签
        a.weui-tabbar__item(href="/account/setting/")
            img.weui-tabbar__icon(src="/dist/weui/dist/example/images/icon_nav_nav.png" alt="" )
            p.weui-tabbar__label 我的