extends ../../../layouts/admin

block head
  title 管理账户

block body
  div.row
    div.col-xs-12
      div#header
      div#filters
      div#results-table
      div#results-paging

    div.page-header
      form.form-inline.pull-right(method='post', action='/admin/dingtalk/sync/')
        div.input-group
          button.btn.btn-success.btn-add(type='submit') 钉钉通讯录同步
      h1 账号 总#{data.length}人

    form.filters
      div.row
        div.col-sm-3
          label Username Search
          input.form-control(name='username', type='text')
        div.col-sm-3
          label Can Play Role
          select.form-control(name='roles')
            option(value='') any
            option(value='admin') admin
            option(value='account') account
        div.col-sm-2
          label Is Active
          select.form-control(name='isActive')
            option(value='') either
            option(value='yes') yes
            option(value='no') no
        div.col-sm-2
          label Sort By
          select.form-control(name='sort')
            option(value='_id') id &#9650;
            option(value='-_id') id &#9660;
            option(value='username') username &#9650;
            option(value='-username') username &#9660;
            option(value='email') email &#9650;
            option(value='-email') email &#9660;

    table.table.table-striped
      thead
        tr
          th
          th 姓名
          th id
          th 部门
          th email
          th 激活
          th _id
      tbody#results-rows
        each person,i in data
            tr
                td #{i+1}
                td #{person.name}
                td #{person.username}
                td #{person.department_name}
                td #{person.email}
                td #{person.isActive}
                td #{person._id}

